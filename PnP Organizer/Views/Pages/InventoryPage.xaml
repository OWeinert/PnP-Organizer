                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Grid.Resources>
                                                    <Style TargetType="ui:NumberBox"
                                                               BasedOn="{StaticResource {x:Type ui:NumberBox}}">
                                                        <Setter Property="ClearButtonEnabled" Value="False"/>
                                                        <Setter Property="SpinButtonsEnabled" Value="False"/>
